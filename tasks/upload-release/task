#!/bin/bash

set -exu

pushd "bbl-state/$BBL_STATE_DIR"
  BOSH_CLIENT=$(bbl director-username); export BOSH_CLIENT
  BOSH_CLIENT_SECRET=$(bbl director-password); export BOSH_CLIENT_SECRET
  BOSH_CA_CERT=$(bbl director-ca-cert); export BOSH_CA_CERT
  BOSH_ENVIRONMENT=$(bbl director-address); export BOSH_ENVIRONMENT
popd

pushd bosh-release-dir
  if [ "$FORCE" == "true" ]; then
    bosh create-release --force
  else
    bosh create-release
  fi

  if [ "$NO_REBASE" = "true" ]; then
    bosh upload-release
  else
    bosh upload-release --rebase
  fi
popd
