<%
class Release
  attr_reader :name, :backport_branch, :s3_bucket
  def initialize(name, backport_branch, s3_bucket)
    @name = name
    @s3_bucket = s3_bucket
    @backport_branch = backport_branch
  end
end

releases = [
  Release.new("cf-syslog-drain", "v8.2.x", "cf-syslog-drain-release-blobs"),
  Release.new("leadership-election", "v1.4.x", "leadership-election-release-blobs"),
  Release.new("log-cache", "v2.1.x", "log-cache-release-blobs"),
  Release.new("loggregator", "v103.x", "loggregator-release-blobs"),
  Release.new("loggregator-agent", "v3.16.x", "loggregator-agent-release-blobs"),
  Release.new("service-metrics", "v1.12.x", "oss-service-metrics-release-blobs"),
]
%>

resources:
- name: loggregator-ci
  type: git
  source:
    uri: git@github.com:cloudfoundry/loggregator-ci.git
    private_key: {{loggregator-key}}

<% releases.each do |release| %>
- name: <%= release.name %>-release-backport
  type: git
  source:
    branch: <%= release.backport_branch %>
    uri: git@github.com:cloudfoundry/<%= release.name %>-release
    private_key: {{cf-loggregator-oauth-bot-key}}

- name: <%= release.name %>-github-release-drafts
  type: github-release
  source:
    user: cloudfoundry
    repository: <%= release.name %>-release
    access_token: {{access-token}}
    drafts: true
<% end %>

jobs:
<% releases.each do |release| %>
- name: <%= release.name %>-create-backport
  serial: true
  plan:
  - get: <%= release.name %>-release-backport
    trigger: false
  - get: loggregator-ci
  - task: create-backport
    input_mapping:
      release-repo: <%= release.name %>-release-backport
    file: loggregator-ci/tasks/create-final-release-backport/task.yml
    params:
      S3_ACCESS_KEY: {{s3-access-key-id}}
      S3_SECRET_KEY: {{s3-secret-access-key}}
      JSON_KEY: {{gcp-service-account-key}}
      SSH_KEY: {{loggregator-key}}
      BLOBSTORE_BUCKET: <%= release.s3_bucket %>
      BRANCH_NAME: <%= release.backport_branch %>
  - put: <%= release.name %>-release-backport
    params:
      repository: repos/release-repo
      rebase: false
  - put: <%= release.name %>-github-release-drafts
    params:
      name: github-release/name
      tag: github-release/tag
      body: github-release/body
      globs:
      - github-release/*.tgz
<% end %>
